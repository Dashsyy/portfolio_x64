<!-- Reveal Animation JS -->
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((e) => {
                    if (e.isIntersecting) {
                        e.target.classList.add("active");
                        observer.unobserve(e.target);
                    }
                });
            },
            { threshold: 0.2 }
        );
        document
            .querySelectorAll(".reveal")
            .forEach((el) => observer.observe(el));
    });
</script>
